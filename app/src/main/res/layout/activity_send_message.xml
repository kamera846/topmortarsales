<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/activity_send_message"
    tools:context=".view.SendMessageActivity">

    <include
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        layout="@layout/component_title_bar_light"/>

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_below="@+id/title_bar"
        android:layout_above="@+id/bottom_action"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Message Option -->
            <androidx.cardview.widget.CardView
                android:id="@+id/msgTypeCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:id="@+id/msgTypeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="start">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pilih opsi pesan yang anda butuhkan"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp"
                        android:theme="@style/Theme.TopMortarSales.BaseTextTitle"/>

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/radioButtonGeneral"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Text Pesan Biasa"
                        android:theme="@style/Theme.TopMortarSales.BaseTextDescription"
                        app:buttonTint="@color/primary_200" />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/radioButtonMedia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Upload Gambar/Video"
                        android:theme="@style/Theme.TopMortarSales.BaseTextDescription"
                        app:buttonTint="@color/primary_200" />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/radioButtonKonten"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Link Konten"
                        android:theme="@style/Theme.TopMortarSales.BaseTextDescription"
                        app:buttonTint="@color/primary_200" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Message -->
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/inputContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_message_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Text Pesan"
                        android:theme="@style/Theme.TopMortarSales.BaseTextTitle"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="(*)"
                        android:textColor="@color/primary"/>

                </LinearLayout>

                <EditText
                    android:id="@+id/et_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:layout_marginBottom="4dp"
                    android:theme="@style/Theme.TopMortarSales.BaseTextDescription"
                    android:textColorHint="@color/black_600"
                    android:maxLines="3"
                    android:inputType="textMultiLine"
                    android:hint="@string/input_message_placeholder"
                    android:autofillHints="@string/input_message_placeholder"
                    android:textSize="14sp"
                    android:maxLength="30"
                    android:background="@drawable/et_background"
                    android:padding="12dp"
                    android:outlineProvider="none"/>

                <!-- Max Text Length -->
                <TextView
                    android:id="@+id/tv_max_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:textColor="@color/primary"
                    android:text="@string/message_length" />

            </LinearLayout>

            <!-- Media Message -->
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/inputMediaContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:paddingBottom="8dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_img_message_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gambar/Video"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:theme="@style/Theme.TopMortarSales.BaseTextTitle"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="(*)"
                        android:textColor="@color/primary"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/btn_pick_img"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="12dp"
                        android:gravity="center"
                        android:background="@drawable/et_background"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@android:color/transparent"
                            android:src="@drawable/img_picker"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Klik untuk memilih file"
                            android:theme="@style/Theme.TopMortarSales.BaseTextTitle"/>

                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/btn_clear_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:gravity="center"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/et_background"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@android:color/transparent"
                            android:src="@drawable/trash_black"/>

                    </LinearLayout>

                </LinearLayout>

                <!-- Max File Size -->
                <TextView
                    android:id="@+id/tv_max_file_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="4dp"/>

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/img_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:layout_marginTop="16dp"/>

                <androidx.media3.ui.PlayerView
                    android:visibility="gone"
                    android:id="@+id/video_message"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="16dp"
                    app:show_buffering="when_playing"
                    app:use_controller="true"/>

            </LinearLayout>

            <!-- Konten Message -->
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/inputKontenContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Link Konten"
                        android:theme="@style/Theme.TopMortarSales.BaseTextTitle"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="(*)"
                        android:textColor="@color/primary"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/selectableKonten"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:background="@drawable/et_background"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvSelectableKonten"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="== Pilih Konten =="
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:background="@android:color/transparent"
                        android:theme="@style/Theme.TopMortarSales.BaseTextTitle"/>

                    <ImageView
                        android:id="@+id/iconSelectableKonten"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="16dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/up_down_black"/>

                </LinearLayout>

            </LinearLayout>

            <!-- Selected Konten -->
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/selectedKontenLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvNameSelectedKonten"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lorem ipsum"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginHorizontal="8dp"
                    android:theme="@style/Theme.TopMortarSales.BaseTextTitle"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imgSelectedKonten"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scaleType="fitCenter"
                            android:adjustViewBounds="true"
                            android:layout_gravity="start"
                            android:layout_marginVertical="4dp"
                            android:layout_marginHorizontal="4dp"
                            android:background="@drawable/background_rounded_8"/>

                        <TextView
                            android:id="@+id/tvBodySelectedKonten"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Lorem ipsum sit dolor amet"
                            android:layout_marginHorizontal="8dp"
                            android:theme="@style/Theme.TopMortarSales.TextBaseLine"/>

                        <TextView
                            android:id="@+id/tvLinkSelectedKonten"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Lorem ipsum sit dolor amet ipsum sit dolor amet"
                            android:layout_marginHorizontal="8dp"
                            android:textColor="@color/blue_silver_lake"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="8dp"
                            android:theme="@style/Theme.TopMortarSales.BaseLine"/>

                        <TextView
                            android:id="@+id/btnPreviewSelectedKonten"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Preview Konten"
                            android:textAlignment="center"
                            android:textColor="@color/green_reseda"
                            android:padding="12dp"
                            android:background="@drawable/bg_transparent_round_8_clickable"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Action -->
    <LinearLayout
        android:id="@+id/bottom_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/notice_bidding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/contaierCountBidding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sisa bidding anda "
                    android:textSize="14sp"
                    android:theme="@style/Theme.TopMortarSales.BaseTextDescription" />

                <TextView
                    android:id="@+id/textTotalBidding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3/5"
                    android:textColor="@color/status_bid"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:theme="@style/Theme.TopMortarSales.BaseTextDescription" />

            </LinearLayout>

            <TextView
                android:id="@+id/text_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_bid_available"
                android:textSize="14sp"
                android:theme="@style/Theme.TopMortarSales.BaseTextDescription" />

        </LinearLayout>

        <Button
            android:visibility="visible"
            android:id="@+id/btn_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/primary"
            android:textColor="@color/white"
            android:padding="12dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="@string/send_now" />

    </LinearLayout>

</RelativeLayout>